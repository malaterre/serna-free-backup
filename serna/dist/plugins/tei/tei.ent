  <custom-content>
    <name>orderedList</name>
    <inscription>Insert ordered list item</inscription>
    <icon>enumerated_list</icon>
    <accel>Ctrl+Alt+N</accel>
    <context-specs>
      <content>
        <text>&lt;item/&gt;</text>
        <pattern>list[@type=&quot;simple&quot;]//list[@type=&quot;ordered&quot;]</pattern>
      </content>
      <content>
        <text>&lt;list type=&quot;ordered&quot;&gt;&lt;item/&gt;&lt;/list&gt;</text>
        <pattern>list[@type=&quot;simple&quot;]/item//node()</pattern>
      </content>
      <content>
        <text>&lt;list type=&quot;ordered&quot;&gt;&lt;item/&gt;&lt;/list&gt;</text>
        <pattern>list[@type=&quot;simple&quot;]/item</pattern>
      </content>
      <content>
        <text>&lt;item/&gt;</text>
        <pattern>list[@type=&quot;ordered&quot;]</pattern>
      </content>
      <content>
        <text>&lt;item&gt;&lt;list type=&quot;ordered&quot;&gt;&lt;item/&gt;;&lt;/item&gt;</text>
        <pattern>list[@type=&quot;simple&quot;]</pattern>
      </content>
      <content>
        <text>&lt;list type=&quot;ordered&quot;&gt;&lt;item/&gt;&lt;/list&gt;</text>
        <pattern/>
      </content>
    </context-specs>
  </custom-content>
  <custom-content>
    <name>itemizedList</name>
    <inscription>Insert itemized list item</inscription>
    <icon>itemized_list</icon>
    <accel>Ctrl+Alt+O</accel>
    <context-specs>
      <content>
        <text>&lt;item/&gt;</text>
        <pattern>list[@type=&quot;ordered&quot;]//list[@type=&quot;simple&quot;]</pattern>
      </content>
      <content>
        <text>&lt;list type=&quot;simple&quot;&gt;&lt;item/&gt;&lt;/list&gt;</text>
        <pattern>list[@type=&quot;ordered&quot;]/item//node()</pattern>
      </content>
      <content>
        <text>&lt;list type=&quot;simple&quot;&gt;&lt;item/&gt;&lt;/list&gt;</text>
        <pattern>list[@type=&quot;ordered&quot;]/item</pattern>
      </content>
      <content>
        <text>&lt;item/&gt;</text>
        <pattern>list[@type=&quot;simple&quot;]</pattern>
      </content>
      <content>
        <text>&lt;item&gt;&lt;list type=&quot;simple&quot;&gt;&lt;item/&gt;;&lt;/item&gt;</text>
        <pattern>list[@type=&quot;ordered&quot;]</pattern>
      </content>
      <content>
        <text>&lt;list type=&quot;simple&quot;&gt;&lt;item/&gt;&lt;/list&gt;</text>
        <pattern/>
      </content>
    </context-specs>
  </custom-content>
  <custom-content>
    <name>para</name>
    <inscription>Insert Para</inscription>
    <icon>para</icon>
    <accel>Ctrl+Alt+P</accel>
    <context-specs>
      <content>
        <text>&lt;p/&gt;</text>
        <pattern>node()[ancestor-or-self::p]</pattern>
        <xpath-location>ancestor-or-self::p[1]</xpath-location>
        <relative-location>after</relative-location>
      </content>
      <content>
        <text>&lt;p/&gt;</text>
        <pattern/>
        <xpath-location/>
        <relative-location>append</relative-location>
      </content>
    </context-specs>
  </custom-content>

